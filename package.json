{
  "name": "it-support-app",
  "version": "1.0.0",
  "description": "IT Support App with React Context",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": "16.x"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "install-server": "npm install",
    "install-dependencies": "npm run install-client && npm run install-server",
    "build-client": "cd frontend && npm run build",
    "install-client": "cd frontend && npm install",
    "heroku-postbuild": "npm run install-client && npm run build-client",
    "server": "nodemon backend/server --ignore frontend",
    "client": "npm start --prefix frontend",
    "start": "concurrently --kill-others-on-fail \"npm run server\" \" npm run client\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zuhayeralam/IT-Support-App.git"
  },
  "keywords": [
    "Context",
    "React",
    "Full",
    "Stack",
    "IT",
    "Support",
    "App"
  ],
  "author": "Zuhayer Alam",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zuhayeralam/IT-Support-App/issues"
  },
  "homepage": "https://github.com/zuhayeralam/IT-Support-App#readme",
  "devDependencies": {
    "concurrently": "^7.2.2",
    "nodemon": "^2.0.16"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.5.1",
    "helmet": "^5.1.1",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.3",
    "mongoose": "^6.4.0",
    "morgan": "^1.10.0",
    "validator": "^13.7.0",
    "xss-clean": "^0.1.1"
  }
}
